{
    "name": "Domain Watermarker",
    "version": "0.0.0",
    "description": "An extension that overlays configurable watermarks on top of websites, primarily to remind developers/testers when theyâ€™re interacting with a live system as opposed to a test one.",
    "manifest_version": 2,
    "browser_action": { "default_popup": "menu.html" },
    "permissions": [
        "tabs",
        "storage"
    ],
    "web_accessible_resources": [
        "watermark.css",
        "menu.css"
    ],
    "content_scripts": [{
        "matches": [
            "http://*/*",
            "https://*/*"
        ],
        "js": [
            "defaults.js",
            "watermark.js"
        ],
        "css": ["watermark.css"]
    }]
}
